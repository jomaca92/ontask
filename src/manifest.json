{
  "manifest_version": 2,
  "name": "OnTask",
  "version": "0.0.1",
  "homepage_url": "https://ontask.me/",
  "description": "Avoid rabbit holes by postponing distractions",
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "180": "icons/180.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "OnTask",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    }
  },
  "chrome_url_overrides" : {
    "newtab": "index.html"
  }
}
